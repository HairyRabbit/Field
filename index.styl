///
/// Field Styles.
///


@require "styles/reset"
@require "styles/util"


/// Vars.

// public.
$field-lh   = 1.5
$field-fz   = 14px
$field-bdrz = 4px
$field-bdc  = #d9d9d9
$field-pc   = #673ab7 //#57c5f7
$area-col   = 8

// disabled.
$field-bgc-disabled = #eee
$field-cc-disabled = #bbb

// dark theme.
$field-bgc-dark = #2a2a2a
$field-cc-dark  = #AFAFAF


/// Field preset

field-reset()
  reset-space()
  reset-font()
  reset-theme()


field-preset()
  box bdbox
  lh $field-lh
  fz $field-fz
  w 100%


@require "_default"